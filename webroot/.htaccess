<IfModule mod_rewrite.c>
    RewriteEngine on

    # Prevent direct access to PHP files
    RewriteCond %{THE_REQUEST} \.php [NC]
    RewriteRule .* - [R=404]

    # Return 404 when accessing root "/"
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule .* - [R=404,L]

    # Disable MultiViews
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>
	
	  Options -Indexes
	
    # Pretty URL rewrite
    RewriteRule ^users$ users.php [NC,L]
</IfModule>
